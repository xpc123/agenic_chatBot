# ============================================================
# Agentic ChatBot 环境配置模板
# ============================================================
# 复制此文件为 .env 并填写你的配置
# cp .env.example .env
# ============================================================

# ============================================================
# 1. LLM 提供商配置
# ============================================================
# 支持的提供商: jedai, openai, anthropic, ollama
LLM_PROVIDER=jedai

# ============================================================
# 2. JedAI 配置 (Cadence 内部)
# ============================================================
# API 端点 (2513端口支持所有模型)
JEDAI_API_BASE=https://sjf-dsgdspr-084.cadence.com:2513
JEDAI_VERIFY_SSL=false
JEDAI_TIMEOUT=120

# LDAP 认证 (必填)
JEDAI_USERNAME=your_ldap_username
JEDAI_PASSWORD=your_ldap_password
JEDAI_AUTH_PROVIDER=LDAP

# ------------------------------------------------------------
# JedAI 模型选择
# ------------------------------------------------------------
# 模型类型: on_prem, gcp_oss, Claude, GEMINI, AzureOpenAI, AWSBedrock
JEDAI_MODEL_TYPE=Claude

# 模型名称 (根据类型选择)
# ┌─────────────┬────────────────────────────────────────────────┐
# │ 类型        │ 可用模型                                        │
# ├─────────────┼────────────────────────────────────────────────┤
# │ on_prem     │ Llama3.3_JEDAI_MODEL_CHAT_2                    │
# │             │ Qwen3-32B                                       │
# │             │ nvidia/llama-3_3-nemotron-super-49b-v1_5       │
# │             │ openai/gpt-oss-120b                            │
# ├─────────────┼────────────────────────────────────────────────┤
# │ gcp_oss     │ meta/llama-3.3-70b-instruct-maas               │
# │             │ meta/llama-3.1-405b-instruct-maas              │
# │             │ qwen/qwen3-235b-a22b-instruct-2507-maas        │
# │             │ deepseek-ai/deepseek-v3.1-maas                 │
# ├─────────────┼────────────────────────────────────────────────┤
# │ Claude      │ GCP_claude-sonnet-4-5 (推荐)                   │
# │             │ GCP_claude-opus-4-1                            │
# │             │ GCP_claude-3-7-sonnet                          │
# ├─────────────┼────────────────────────────────────────────────┤
# │ GEMINI      │ GCP_gemini-2.5-pro                             │
# │             │ GCP_gemini-2.5-flash                           │
# ├─────────────┼────────────────────────────────────────────────┤
# │ AzureOpenAI │ AzureOpenAI_gpt-4o (成本高，不推荐)            │
# │             │ AzureOpenAI_gpt-5                              │
# ├─────────────┼────────────────────────────────────────────────┤
# │ AWSBedrock  │ AWSBedrock_us.anthropic.claude-sonnet-4-...    │
# └─────────────┴────────────────────────────────────────────────┘
JEDAI_MODEL=GCP_claude-sonnet-4-5

# 生成参数
JEDAI_MAX_TOKENS=8000
JEDAI_TEMPERATURE=0.7
JEDAI_TOP_P=1.0

# GCP 配置 (仅 gcp_oss 类型需要)
JEDAI_GCP_PROJECT=gcp-cdns-llm-test
JEDAI_GCP_LOCATION=us-east5

# ============================================================
# 3. OpenAI 配置 (可选，备用)
# ============================================================
# OPENAI_API_KEY=sk-your-api-key
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_TEMPERATURE=0.7

# ============================================================
# 4. Anthropic 配置 (可选，直接调用)
# ============================================================
# ANTHROPIC_API_KEY=your_anthropic_api_key

# ============================================================
# 5. Embedding 配置
# ============================================================
EMBEDDING_PROVIDER=jedai
EMBEDDING_MODEL=text-embedding-005
EMBEDDING_DIMENSION=768

# JedAI Embedding 配置
JEDAI_EMBEDDING_PROVIDER=gcp
JEDAI_EMBEDDING_MODEL=text-embedding-005

# ============================================================
# 6. 向量数据库配置
# ============================================================
# 类型: faiss (推荐), chroma
# 注意: chroma 需要 sqlite >= 3.35，系统版本太旧请用 faiss
VECTOR_DB_TYPE=faiss
FAISS_INDEX_PATH=./data/vector_db/faiss
# CHROMA_PERSIST_DIR=./data/vector_db/chroma

# ============================================================
# 7. RAG 配置
# ============================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7

# ============================================================
# 8. 文档存储配置
# ============================================================
UPLOAD_DIR=./data/documents
MAX_UPLOAD_SIZE=52428800

# ============================================================
# 9. MCP (Model Context Protocol) 配置
# ============================================================
MCP_SERVERS_CONFIG=./config/mcp_servers.json
MCP_TIMEOUT=30

# ============================================================
# 10. Agent 配置
# ============================================================
MAX_ITERATIONS=10
AGENT_TYPE=react
ENABLE_PLANNING=true
ENABLE_REFLECTION=true

# ============================================================
# 11. 服务配置
# ============================================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS 允许的源
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ============================================================
# 12. 日志配置
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
